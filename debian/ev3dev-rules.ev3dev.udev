# Set permissions so ev3dev group can control LEDs (only those that end with ":brick-status")
SUBSYSTEM=="leds", DEVPATH=="*:brick-status", ACTION=="add|change", RUN+="/usr/bin/chgrp -hR ev3dev /sys$devpath", RUN+="/usr/bin/chmod -R g+w /sys$devpath"

# Set permissions so ev3dev group can control lego bus devices, ports, sensors and motors
SUBSYSTEM=="lego|lego-port|lego-sensor|tacho-motor|servo-motor|dc-motor", ACTION=="add", RUN+="/usr/bin/chgrp -hR ev3dev /sys$devpath", RUN+="/usr/bin/chmod -R g+w /sys$devpath"
